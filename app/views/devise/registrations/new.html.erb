<div class="container center">
<div class= "col-md-4 col-md-offset-4">
<h2>Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	<p><%= f.text_field :username, {:class => "form-control",:placeholder => "User Name",:required => true, :autofocus => true}%></p>
  <p><%= f.email_field :email, {:class => "form-control",:placeholder => "Email",:required => true, :autofocus => true} %></p>
  <p><%= f.password_field :password, {:class => "form-control",:placeholder => "Password",:required => true,autocomplete: "off"} %></p>
  <p><%= f.password_field :password_confirmation, {:class => "form-control",:placeholder => "Confirm Password",:required => true,autocomplete: "off"} %></p>
  <%= f.submit("Sign up",:class => "btn btn-primary") %>
<% end %> 
  <p></p>
    <h4>Already registered?</h4>
    <%= link_to "Sign In", "/users/sign_in",:class =>"btn btn-info" %>

</div>
</div>